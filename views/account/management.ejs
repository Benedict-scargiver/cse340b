<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
    res.redirect('/')
  } %>
  
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
  <div class="management-links">
    <a href="/inv/add-classification">Add New Classification</a>
    <a href="/inv/add-inventory">Add New Vehicle</a>
  </div>
  
  <p>Select a classification to view inventory:</p>

<form class="form--fieldset" action="">
  <label for="classification_id">Classification:</label>
 <select name="classification_id" id="classification_id">
  <%- classSelect %>
</select>
</form>